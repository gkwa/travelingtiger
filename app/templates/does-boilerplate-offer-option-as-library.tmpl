	}

	return nil, errors.WithStackTrace(FormatNotJsonOrGo{
		ExpectedJsonFormat: `{"key1": "value1", "key2": "value2", "key3": "value3"}`,
		ExpectedGoFormat:   `map[key1:value1 key2:value2 key3:value3]`,
